<html>

  <head>
    <meta charset="utf-8" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="/public/css/main.css" />
  </head>

  <body>
    <nav id="navbar">
      <ul id="navbar-ul">
        <li>
          <p><a class="link" href="/">Home</a></p>
        </li>
        {{#if loggedIn}}
          <li>
            <p><a class="link" href="/dashboard">Dashboard</a></p>
          </li>
          <li>
            <p><button id="logout-btn" class="btn-no-style">Logout</button> </p>
          </li>

        {{else}}
          <li>
            <p><a class="link" href="/login">Login</a></p>
          </li>
        {{/if}}
      </ul>
      <h1 id="nav-header">Tech Blog</h1>
    </nav>
    <main>
      {{{body}}}
    </main>
    {{#if loggedIn}}
      <footer>
        Thanks for signing in!
      </footer>

      <script src="/js/logout.js"></script>

    {{else}}
      <footer>
        Thanks for visiting!
      </footer>
      
    {{/if}}
